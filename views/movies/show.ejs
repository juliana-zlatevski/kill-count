
<div class="jumbotron jumbotron-fluid">
<div class="container">
    <h1 class="display-4"><%= movies.title %> KILL COUNT</h1>

    <p class="lead">
        <p><b>Release Year: </b><%= movies.year %></p>
        <p><b>Directed by: </b><%= movies.director %></p>
        <p><b>Kill Count: </b><%= movies.kill_count %></p>

        <h3>Victims:</h3>
        <ol>
        <% for (let i = 0; i < movies.victims.length; i++) { %>
            <li><a href="/victims/<%= movies.victims[i]._id %>"><%= movies.victims[i].name %></a></p></li>
        <% } %>
        </ol>

        <form action="/movies/<%= movies._id %>?_method=DELETE" method="POST">
            <input type="submit" value="Delete Movie" class="btn btn-dark">
        </form>

        <form action="/movies/<%= movies._id %>/edit" method="GET">
            <input type="submit" value="Edit Movie Details" class="btn btn-dark">
        </form>
        <form action="/victims/new" method="GET">
            <input type="submit" value="Add Another Victim" class="btn btn-dark">
        </form>
    </p>
        