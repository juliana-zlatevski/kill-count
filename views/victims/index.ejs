<h1>Victims</h1>

<div class="container">
<div class="row">
<% for (let i = 0; i < victims.length; i++) { %> 
<div class="card" style="width: 18rem;">
    <div class="card-body">
      <h5 class="card-title"><%= victims[i].name %></h5>
      <p class="card-text">

        <% if (victims[i].golden_chainsaw === true) { %> <img src="/logos/The_Golden_Chainsaw.png" width="75px"> <% } %> 

        <% if (victims[i].dull_machete === true) { %> <img src="/logos/The_Dull_Machete.png" width="75px"> 
        <% } %> 

      </p>
      <a href="/victims/<%= victims[i]._id %>" class="btn btn-outline-danger">See more</a>
    </div>
  </div>
  <% } %> 
</div>
</div>
